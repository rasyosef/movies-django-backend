{
    "builds": [
        {
            "src": "django_project/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.11" }
        },
        {
            "src": "build.sh",
            "use": "@vercel/static-build",
            "config": { "destDir": "staticfiles" }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "django_project/wsgi.py"
        }
    ]
}